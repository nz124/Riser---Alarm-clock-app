<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/menu_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textSize="14sp"
        android:fontFamily="@string/font_family_medium"
        android:textColor="@android:color/white"
        android:drawablePadding="@dimen/icon_margin" />

    <View android:id="@+id/divisor"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/nav_drawer_divider_margin"
        android:layout_marginBottom="@dimen/nav_drawer_divider_margin"
        android:background="#ffffff" />


</LinearLayout>