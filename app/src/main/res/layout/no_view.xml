<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme = "@android:style/Theme.Translucent.NoTitleBar">


    <Button
        android:id="@+id/turn_off"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/turn_off_alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/snooze"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/snooze"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/snooze"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:layout_marginBottom="184dp"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/snooze_alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <TextView
        android:id="@+id/time_display"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/time_display"
        android:textSize="70sp"
        app:layout_constraintBottom_toTopOf="@+id/turn_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/date_display"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/snooze"
        app:layout_constraintTop_toBottomOf="@+id/time_display"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>