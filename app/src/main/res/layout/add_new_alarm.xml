<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slidingPane"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Master fragment-->
    <fragment
        android:id="@+id/fragment_master"
        android:name="com.example.hello.alarm.MasterFragment"
        android:layout_width="305dp"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"/>

    <!--Detail layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/mini_drawer">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/alarm_clock"
            app:backgroundTint="@color/transparent_grey_500" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="368dp"
            android:text="TextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
            android:textSize="50dp" />
    </FrameLayout>





</android.support.v4.widget.SlidingPaneLayout>