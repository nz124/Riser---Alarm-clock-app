<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/pick_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pick_date_button"
        android:layout_marginStart="28dp"
        android:text="Pick Time"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="191dp" />

    <Button
        android:id="@+id/pick_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:text="Pick Date"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="191dp" />

    <Button
        android:id="@+id/pick_point_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/pick_time_button"
        android:layout_marginEnd="19dp"
        android:text="Set point"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="191dp" />

    <TextView
        android:id="@+id/challenge_info"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Choose time you want to challenge and how many point you want to spend on the challenge"
        android:textSize="30sp" />

    <Button
        android:id="@+id/challenge_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="242dp"
        android:text="Challenge" />

</RelativeLayout>